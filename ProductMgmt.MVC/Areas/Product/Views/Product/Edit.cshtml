@model ProductMgmt.MVC.ViewModels.ProductVM;

<div id="mdlEditLeadSource" class="modal fade bs-mdlEditLeadSource-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myELSModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="myELSModalLabel">Edit Lead Source Details</h5>
				@* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
			</div>
			<div class="modal-body">
				<form>
					<div class="row mt-3 mb-2">
						<div class="col-lg-12">Name<span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="text" value="@Model.Name" placeholder="" class="form-control" id="txtPName"></div>
					</div>
					<div class="row mt-3 mb-2">
						<div class="col-lg-12">Description<span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="text" value="@Model.Description" placeholder="" class="form-control" id="txtPName">
						</div>
					</div>
					<div class="row mt-3 mb-2">
						<div class="col-lg-12">Price<span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="text" value="@Model.Price" placeholder="" class="form-control" id="txtPName">
						</div>
					</div>

					<div class="row mt-3 mb-2">
						<div class="col-lg-12">StockQuantity<span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="text" value="@Model.StockQuantity" placeholder="" class="form-control" id="txtPName">
						</div>
					</div>

					<div class="row mt-3 mb-2">
						<div class="col-lg-12">SKU<span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="text" value="@Model.SKU" placeholder="" class="form-control" id="txtPName">
						</div>
					</div>
					<div class="row mt-3 mb-2">
						<div class="col-lg-12">CreatedDate<span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="text" value="@Model.CreatedDate" placeholder="" class="form-control" id="txtPName">
						</div>
					</div>
					<div class="row mt-3 mb-2">
						<div class="col-lg-12">UpdatedDate<span class="text-danger">*</span></div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="text" value="@Model.UpdatedDate" placeholder="" class="form-control" id="txtPName">
						</div>
					</div>
					<div class="row mt-4 text-end ">
						<div class="col-lg-12 ">
							<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
							<button asp-action="Update" asp-route-Id="@Model.Id" type="button" class="btn btn-sm btn-de-primary"><i class="mdi mdi-check-all me-2"></i>Update</button>
						</div>
					</div>
				</form>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
